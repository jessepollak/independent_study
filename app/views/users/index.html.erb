<h1>Listing users</h1>

<% if flash[:notice] %>
    <p id='flash'><%= flash[:notice] %></p>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Fb</th>
    <th>Email</th>
    <th>Number</th>
    <th>College</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.fb_id %></td>
    <td><%= user.email %></td>
    <td><%= user.number %></td>
    <td><%= user.college %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
