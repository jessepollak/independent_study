<h1>Listing requests</h1>

<% if flash[:notice] %>
  <p id="flash"><%= flash[:notice] %></p>
  <% flash.delete(:notice) %>
<% elsif @requests==[] %>
  <p id="msg">There are currently no pending requests</p>
<% end %>

<table id = "requests-table" class = "table table-striped table-bordered">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Date</th>
    <th></th>
  </tr>

<% @requests.each do |request| %>
  <tr class="request">
    <td><%= request.title %></td>
    <td><%= truncate(request.description, length: 100) %></td>
    <td><%= request.date.strftime("%A %m/%d") %></td>
    <td><%= link_to 'Show', request %></td>d
  </tr>
<% end %>
</table>
