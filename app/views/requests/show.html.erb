<div class="row" id="request-show">
	<div class="padded-top">
		<div class="well span8 offset1">
			<h2><%=@request.title%>
				<span class="pull-right"><%=@request.date.strftime("%A %m/%d") %></span>
			</h2>
			<p id="description">
				<%=@request.description%>
			</p>
			<div id="footer-row" class="row-fluid">
				<div class="span4">
					<div class="show-buttons">
						<a class="btn btn-success btn-large" href="#">Lend</a>
						<a class="btn btn-default btn-large" href=<%=root_url%>>Back</a>
					</div>
					<div class="clear-both">
					</div>
				</div>
				<div class="span8">
					<div class="fb-info">
						<div class="fb-name">
							<a href=<%="http://facebook.com/" + @request.user.fb_id%>><%=@request.user.name%></a>
							<p><%=@request.user.college%></p>
						</div>
						<div class="fb-picture">
							<img src=<%=@request.user.picture%> alt="Profile picture"></img>
						</div>
					</div>
					<div class="clear-both">
					</div>
				</div>
			</div>
		</div>
	</div>
</div>	
<div class="row response-form">
	<%= form_for @response, html: { class: "form-horizontal" } do |f| %>
    <fieldset>
        <legend><%=@form_name%></legend>
    <% if @request.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@request.errors.count, "error") %> prohibited this request from being saved:</h2>

        <ul>
        <% @request.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="control-group">
      <%= f.label :title, class: "control-label" %>
      <div class="controls">
        <%= f.text_field :title, class: "input-xlarge" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :description, class: "control-label" %>
      <div class="controls">
        <%= f.text_area :description, rows: 5, class: "input-xlarge" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :date, class: "control-label"%>
      <div class="controls">
        <%= f.datetime_select :date, { order: [:month, :day, :year], discard_minute: true, discard_hour: true} , { class: "span2"} %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit "Send!", class: "btn btn-primary" %>
    </div>
  </fieldset>
<% end %>
